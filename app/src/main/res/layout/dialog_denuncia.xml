<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:backgroundTint="@android:color/transparent">

    <Button
        android:id="@+id/btnRechazarDenuncia"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:drawableTop="@drawable/cancel"
        android:paddingTop="15dp"
        android:text="@string/rechazar"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btnValidarDenuncia"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:drawableTop="@drawable/ok"
        android:paddingTop="15dp"
        android:text="@string/validar"
        android:textColor="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/btnLlamarDenuncia"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/phone" />
</LinearLayout>